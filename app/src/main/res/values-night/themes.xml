<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme için özel ayarlar -->
    <style name="Theme.VoiceButton" parent="android:Theme.Material.NoActionBar">
        <!-- Dark theme için yüksek contrast -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#E0E0E0</item>
        <item name="android:colorBackground">#121212</item>
        <item name="android:colorPrimary">#BB86FC</item>
        <item name="android:colorSecondary">#03DAC6</item>
    </style>
    
    <!-- Siyah splash ekranı teması -->
    <style name="Theme.VoiceButton.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.VoiceButton</item>
    </style>
</resources>

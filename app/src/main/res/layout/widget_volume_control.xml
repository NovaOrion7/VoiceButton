<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="8dp"
    android:gravity="center">

    <!-- Ses Azalt Butonu -->
    <Button
        android:id="@+id/widget_volume_down"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="âˆ’"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/widget_button_background"
        android:layout_margin="2dp" />

    <!-- Sessiz/Sesi AÃ§ Butonu -->
    <Button
        android:id="@+id/widget_mute_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="ðŸ”Š"
        android:textSize="16sp"
        android:background="@drawable/widget_button_background"
        android:layout_margin="2dp" />

    <!-- Ses Seviyesi GÃ¶stergesi -->
    <TextView
        android:id="@+id/widget_volume_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:text="50%"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/widget_text_background"
        android:layout_margin="2dp" />

    <!-- Ses ArtÄ±r Butonu -->
    <Button
        android:id="@+id/widget_volume_up"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="+"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/widget_button_background"
        android:layout_margin="2dp" />

    <!-- Yenile Butonu -->
    <ImageButton
        android:id="@+id/widget_refresh"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:src="@drawable/ic_refresh"
        android:contentDescription="@string/refresh"
        android:background="@drawable/widget_button_background"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter" />

</LinearLayout>
